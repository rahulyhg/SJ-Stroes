<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.sanjay555.firebase_ex">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FirstCustomer" />
        <activity android:name=".RegisterCustomer" />
        <activity android:name=".ViewCustomersList" />
        <activity android:name=".SingleCustomerActivity" />
        <activity android:name=".AddNewPurchaseActivity" />
        <activity android:name=".SingleUserAllPurchases" />
        <activity android:name=".SingleUserAllGivenAmountList" />

        <uses-feature
            android:name="android.hardware.camera"
            android:required="true" />

        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

        <activity android:name=".SinglePurchaseDetailsActivity"></activity>
    </application>

</manifest>